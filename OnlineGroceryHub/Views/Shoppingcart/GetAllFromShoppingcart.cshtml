@model ShoppingcartViewModel

<div class="hero-wrap hero-bread" style="background-image: url('https://pbs.twimg.com/media/D7vU-BDVUAAWHgM?format=jpg&name=medium');">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<h1 class="mb-0 bread">My Cart</h1>
			</div>
		</div>
	</div>
</div>

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="cart-list">
					@if(Model.Products.Count() == 0)
					{
						<p>Your shopping cart is empty.</p>
						<form method="get" asp-action="GetAllProducts" asp-controller="Shop">
							<button class="btn btn-primary add-products">Add products</button>
						</form>
					}
					else
					{
						<table class="table">
							<thead class="thead-primary">
								<tr class="text-center">
									<th>&nbsp;</th>
									<th>&nbsp;</th>
									<th>Product name</th>
									<th>Price</th>
									<th>Quantity</th>
									<th>Total</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var product in Model.Products)
								{
									<tr class="text-center">
										<td class="product-remove">
											<form method="post" asp-action="Remove" asp-controller="Shoppingcart">
												<button type="submit" name="productId" value="@product.Id" class="product-remove"><span class="ion-ios-close"></span></button>
												<input type="hidden" name="shoppingcartId" value="@Model.ApplicationUser.ShoppingcartId" />
											</form>
										</td>
										<td class="image-prod"><div class="img" style="background-image:url(@product.ImageUrl);"></div></td>

										<td class="product-name">
											<h3>@product.Name</h3>
										</td>

										<td class="price">$@product.Price</td>

										<td class="quantity">
											<div class="input-group mb-3">
												<input type="text" name="quantity" class="quantity form-control input-number" value="@product.Amount" min="1" max="100">
											</div>
										</td>

										<td class="total">$@(product.Amount * product.Price)</td>
									</tr>
								}
							</tbody>
						</table>
					}
				</div>
			</div>
		</div>
	</div>
</section>

@if(Model.Products.Count() > 0)
{
	<div class="row justify-content-end">
		<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
			<div class="cart-total mb-3">
				<h3>Cart Totals</h3>
				<p class="d-flex">
					<span>Subtotal</span>
					<span>$@(Model.Products.Sum(p => p.Price))</span>
				</p>
				<p class="d-flex">
					<span>Delivery</span>
					@if (Model.Products.Sum(p => p.Price) < 50)
					{
						<span>
							$5.90
						</span>
					}
					else
					{
						<span free-delivery>FREE</span>
					}
				</p>
				<hr>
				<p class="d-flex total-price">
					<span>Total</span>
					@if (Model.Products.Sum(p => p.Price) < 50)
					{
						<span>$@((Model.Products.Sum(p => p.Price)) + (decimal)5.90)</span>
					}
					else
					{
						<span>$@((Model.Products.Sum(p => p.Price)))</span>
					}
				</p>
			</div>
			<p><a href="checkout.html" class="btn btn-primary py-3 px-4">Proceed to Checkout</a></p>
		</div>
	</div>
}
